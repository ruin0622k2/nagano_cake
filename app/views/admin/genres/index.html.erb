<div class="container">
  <div class="row mt-3 mb-1">
    <div class="col-lg-1"></div>
    <div class="col-lg-6">
    <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  <div class="row mt-4 mb-4">
    <div class="form-group col-lg-2">
      <%= form_with model: @genre,:url => {:action => :create} do |f| %>
      <label for="genre_title">ジャンル名</label>
    </div>
    <div class="col-lg-3">
      <%=f.text_field :name %>
    </div>
    <div class="col-lg-2">
      <%=f.submit '新規登録',class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse col-lg-4">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="col-lg-8">
              <%= genre.name %>
            </td>
            <td class="col-lg-4">
              <%= link_to edit_admin_genre_path(genre.id),class:"btn btn-sm btn-success" do %>編集する
              <% end %>
            </td>
          </tr>
        </div>
      <% end %>
      </tbody>
    </table>
    </div>
  <div class="col-lg-6">
  </div>