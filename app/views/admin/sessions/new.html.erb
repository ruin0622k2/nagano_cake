<div class="container">
  <div class="row">
    <div class="col-md-auto">
    <h2>管理者ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1">
    </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="col-md-12">
          メールアドレス
          </div>
          <div class="col-md-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="field">
          パスワード
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-lg btn-primary"  %>
        </div>
      <% end %>
    </div>
</div>