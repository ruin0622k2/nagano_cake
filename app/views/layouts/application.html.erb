<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container mt-2 mb-4">
          <a class="navbar-brand" href="/">
            <span>NaganoCake LOGO</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto mx-8">
            <% if admin_signed_in? %>
              <li>
                <%= link_to  admin_items_index_path, class: "nav-link text-dark" %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_customers_index, class: "nav-link text-dark"  %>
              </li>
              <li>
                <%= link_to "注文履歴一覧", admin_path, class: "nav-link text-dark" %>
              </li>
              <li>
                <%= link_to "ジャンル一覧", admin_genres, class: "nav-link text-dark" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>

            <% else %>
              <li>
                <%= link_to "About", about_path, class: "nav-link text-dark" %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, class: "nav-link text-dark" %>
              </li>
              <li>
                <%= link_to "新規登録", new_customer_registration_path, class: "nav-link text-dark" %>
              </li>
              <li>
                <%= link_to "ログイン", new_customer_session_path, class: "nav-link text-dark" %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
