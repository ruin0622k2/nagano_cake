<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11 mx-4">
    <h4>会員情報編集</h4>
    </div>
  </div>
    <%= form_with model: @customer do |f| %>
    <div class="field row my-2">
      <div class="col-3">
        氏名
      </div>
      <div class="col-3">
        <%= f.text_field :last_name,class: "form-control" %>
      </div>
      <div class="col-3">
        <%=f.text_field :first_name,class: "form-control" %>
      </div>
    </div>
    <div class="field row my-2">
      <div class="col-3">
        フリガナ
      </div>
      <div class="col-3">
        <%=f.text_field :last_name_kana,class: "form-control" %>
      </div>
      <div class="col-3">
        <%=f.text_field :first_name_kana,class: "form-control" %>
      </div>
    </div>
    <div class="field row my-2">
      <div class="col-3">
        郵便番号
      </div>
      <div class="col-3">
        <%=f.text_field :postal_code,class: "form-control" %>
      </div>
    </div>
    <div class="field row my-2">
      <div class="col-3">
        住所
      </div>
      <div class="col-6">
        <%=f.text_field :address,class: "form-control" %>
      </div>
    </div>
    <div class="field row my-2">
      <div class="col-3">
        電話番号
      </div>
      <div class="col-3">
        <%=f.text_field :telephone_number,class: "form-control" %>
      </div>
    </div>
    <div class="field row my-2">
      <div class="col-3">
        メールアドレス
      </div>
      <div class="col-3">
        <%=f.text_field :email,class: "form-control" %>
      </div>
    </div>
    <div class="field row my-2">
      <div class="col-3"></div>
      <div class="col-5">
        <%=f.submit '変更内容を保存',class: "btn btn-success" %>
      </div>
      <div class="col-4">
        <%= redirect_to "退会する",'/customers/unsubscribe',class: "btn btn-danger" %>
      </div>
      <% end %>
    </div>
  </div>
</div>