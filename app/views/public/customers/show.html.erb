<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
    <h4>ログイン</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <h3>登録情報</h3>
    </div>
    <div class="col-2">
      <%= link_to "編集する", customer_path(@customer.id),class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <table>
        <thead>
          <div class="col-3">
          <th>氏名</th>
          </div>
          <div class="col-3">
          <th><%= @customer.last_name %><%= @customer.first_name %></th>
          </div>
          <div class="col-3">
          <th>カナ</th>
          </div>
          <div class="col-3">
          <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
          </div>
          <div class="col-3">
          <th>郵便番号</th>
          </div>
          <div class="col-3">
          <th><%= @customer.postal_code %></th>
          </div>
          <div class="col-3">
          <th>住所</th>
          </div>
          <div class="col-3">
          <th><%= @customer.address %></th>
          </div>
          <div class="col-3">
          <th>電話番号</th>
          </div>
          <div class="col-3">
          <th><%= @customer.telephone_number %></th>
          </div>
          <div class="col-3">
          <th>メールアドレス</th>
          </div>
          <div class="col-3">
          <th><%= @customer.email %></th>
          </div>
        </thead>
      </table>
    </div>
    <div class="row">
      <div class="col-2">配送先</div>
      <div class="col-2">
        <%= link_to "一覧を見る", addresses_path,class: "btn btn-primary" %>
      </div>
    </div>
    <div class="row">
      <div class="col-2">注文履歴</div>
      <div class="col-2">
        <%= link_to "一覧を見る", orders_path,class: "btn btn-primary" %>
    </div>
  </div>